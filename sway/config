################################# Launcher Hotkeys #####################################
# Launch Menu Launcher
bindsym $mod+c exec --no-startup-id rofi -show drun -theme dmenu
# Launch Terminal
bindsym $mod+Return exec ghostty
# Launch Browser
#bindsym $mod+f exec flatpak run com.brave.Browser
bindsym $mod+f exec firefox
# Launch Volume Management
bindsym $mod+v exec pavucontrol
# Launch File Explorer
bindsym $mod+e exec nautilus
# Launch Notification Menu
bindsym $mod+n exec swaync-client -t
# Launch Bluetooth Manager
bindsym $mod+b exec blueman-manager
# Snippet Selector
bindsym $mod+t exec macopa -Fywy
bindsym $mod+Shift+t exec macopa -Sywy
## Screenshot
bindsym $mod+Shift+p exec grim -g "$(slurp)" ~/Pictures/Screenshots/screenshot_$(date +%Y%m%d%H%M%S).png && notify-send -t 4000 "üì∑ Saved to ~/Pictures/Screenshots/"
bindsym F9 exec grim -g "$(slurp)" ~/Pictures/Screenshots/screenshot_$(date +%Y%m%d%H%M%S).png && notify-send -t 4000 "üì∑ Saved to ~/Pictures/Screenshots/"
bindsym $mod+p exec grim -g "$(slurp)" - | wl-copy && notify-send -t 4000 "üì∑ Copied to Clipboard"
bindsym $mod+Ctrl+p exec notify-send -t 4000 "üé® Select Hex Colour" && grim -g "$(slurp -p)" -t ppm - | convert - -format '%[pixel:p{0,0}]' txt:- | tail -n 1 | cut -d ' ' -f 4 | wl-copy && notify-send -t 4000 "üé® Grepped to Clipboard"
